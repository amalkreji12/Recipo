<h1>All</h1>



<body>
    <!-- Navbar -->
    

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin">
                                <i class="fas fa-tachometer-alt"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/all-recipes">
                                <i class="fas fa-utensils"></i>
                                Manage Recipes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/all-category">
                                <i class="fas fa-list"></i>
                                Manage Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/all-users">
                                <i class="fas fa-users"></i>
                                Manage Users
                            </a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/activites">
                                <i class="fas fa-cog"></i>
                                Settings
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Admin Dashboard</h1>
                </div>

                <!-- Stats Section -->
                <div class="row">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Recipes</h5>
                                <p class="card-text">{{total.recipeCount}}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Categories</h5>
                                <p class="card-text">{{total.categoryCount}}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card text-white bg-danger mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Users</h5>
                                <p class="card-text">1200</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity Section -->
                <h2>Recent Activity</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        {{#each total.limitActivity}}
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Action</th>
                                <th>User</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{this.date}}</td>
                                <td>{{this.action}}</td>
                                <td>{{this.user}}</td>
                                {{!-- <th>
                                    {{#if this.status=='Completed'}}
                                    <span class="badge bg-success">{{this.status}}</span>
                                    {{else}}
                                    <span class="badge bg-danger">{{this.status}}</span>
                                    {{/if }}
                                </th> --}}
                                <td><span class="badge bg-success">{{this.status}}</span></td>
                            </tr>
                            
                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </main>
        </div>
    </div>

 
</body>



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add Category</h5>
                </div>
                <div class="card-body">
                    <a href="/admin/add-category" class="btn btn-success">Add New Category</a>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add Recipe</h5>
                </div>
                <div class="card-body">
                    <a href="/admin/add-recipe" class="btn btn-success">Add New Recipe</a>
                </div>
            </div>
        </div>
    </div>
</div>
