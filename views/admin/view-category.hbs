<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="my-4">All Categories</h2>
        </div>
    </div>

    <div class="row">
        <!-- Example category card -->
        {{#each category}}
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card h-100">
                <img src="/images/{{this.image}}" class="card-img-top" alt="{{this.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <a href="/categories/{{this._id}}" class="btn btn-primary">View Recipes</a>
                    <div class="btn-group">
                        <a href="/admin/edit-category/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
