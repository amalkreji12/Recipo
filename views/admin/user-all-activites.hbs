

    <div class="container mt-5">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-4">All Activities for: {{user.username}}</h2>
            <a href="/admin/view-user/{{user._id}}" class="btn btn-secondary">Back to User</a>
        </div>

        <!-- User Activities Table -->
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">All Activities</h4>
                {{#if activity.length}}
                    <table id="activityTable" class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Activity</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each activity}}
                            <tr>
                                <td>{{this.action}}</td>
                                <td>{{this.status}}</td>
                                <td>{{this.date}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <p>No activities found</p>
                {{/if}}
            </div>
        </div>
    </div>

    <!-- Initialize DataTables -->
    <script>
        $(document).ready(function() {
            $('#activityTable').DataTable({
                "paging": true,
                "searching": true,
                "info": true
            });
        });
    </script>

