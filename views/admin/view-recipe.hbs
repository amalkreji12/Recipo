
<body>

    <div class="container mt-5">
        <!-- Recipe Title and Back Button -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6">{{recipe.name}}</h1>
            <a href="/admin/all-recipes" class="btn btn-primary">Go Back</a>
        </div>

        <!-- Recipe Image -->
        <div class="text-center mb-4">
            <img src="/uploads/recipes/{{recipe.name}}.png" alt="{{recipe.name}}" class="img-fluid rounded shadow" style=" height: 20rem;">
        </div>

        <!-- Recipe Details -->
        <div class="row">
            <div class="col-lg-8">
                <!-- Recipe Description -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">Description</h4>
                        <p class="card-text">{{recipe.description}}</p>
                    </div>
                </div>

                <!-- Recipe Ingredients -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">Ingredients</h4>
                        <p>{{recipe.ingredients}}</p>
                    </div>
                </div>

                <!-- Recipe Steps -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">Steps</h4>
                        <ol class="list-group list-group-numbered">
                            <p>{{recipe.making}}</p>
                        </ol>
                    </div>
                </div>
            </div>

            <!-- Recipe Sidebar -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">Recipe Info</h4>
                        <p><strong>Category:</strong> {{recipe.category}}</p>
                        <p><strong>Submitted by:</strong> {{recipe.email}}</p>
                    </div>
                </div>

                <!-- Edit and Delete Buttons (for admins) -->
                <div class="d-flex justify-content-between">
                    <a href="/admin/edit-recipe/{{recipe._id}}" class="btn btn-warning">Edit Recipe</a>
                    <a href="/admin/delete-recipe/{{recipe._id}}" class="btn btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this recipe?')">Delete Recipe</a>
                </div>
            </div>
        </div>
    </div>


</body>

