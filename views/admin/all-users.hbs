
<body>

    <div class="container mt-5">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-4">User Management</h2>
            
        </div>

        <!-- User Table -->
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.username}}</td>
                    <td>{{this.email}}</td>
                    <td>User</td>
                    <td>
                        <a href="/admin/view-user/{{this._id}}" class="btn btn-sm btn-info">View</a>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </td>
                </tr>
                {{/each}}
                
            </tbody>
        </table>
    
    </div>


