<h1 class="pb-4">Explore Categories</h1>

<nav aria-label="breadcrumb"></nav>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Explore Categories</li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">

    {{#each category}}
        <a href="/category/{{this.name}}" class="col text-center category__link">
            <div class="category__img shadow">
                <img src="/images/{{this.image}}" alt="Indian Food" loading="lazy">
                <input type="text" name="categoryid" value="{{this._id}}" hidden>
            </div>
            <div class="pt-1">{{this.name}}</div>
        </a>
    {{/each}}

</div>