<h1>Search Recipes</h1>
<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            {{!-- <th>Description</th> --}}
            <th>Image</th>
        </tr>
    </thead>

    <tbody>
        {{#each latest}}
        <tr>
            <td><a href="/recipe/{{this._id}}">{{this.name}}</a></td>
            <td>{{this.category}}</td>
            {{!-- <td>{{this.description}}</td> --}}
            <td><img style="width:60px;height:60px;" src="/uploads/recipes/{{this.name}}.png" alt=""></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>